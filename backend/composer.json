{
    "name": "prism/browser-backend",
    "description": "PHP backend for Prism browser with multi-engine support",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "guzzlehttp/guzzle": "^7.8",
        "firebase/php-jwt": "^6.8",
        "facebook/webdriver": "^1.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Prism\\Backend\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prism\\Backend\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:engines": "phpunit --testsuite=engines",
        "lint": "phpcs src/",
        "lint:fix": "phpcbf src/",
        "analyze": "phpstan analyse src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
