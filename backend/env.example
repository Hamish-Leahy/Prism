# Prism Browser Backend Environment Configuration

# Application
APP_NAME="Prism Browser Backend"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en

# Database Configuration
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=prism_browser.sqlite
DB_USERNAME=
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=
DB_STRICT=true

# Supabase Configuration (Optional)
SUPABASE_ENABLED=false
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_HOST=localhost
SUPABASE_PORT=5432
SUPABASE_DATABASE=postgres
SUPABASE_USERNAME=postgres
SUPABASE_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800
JWT_ISSUER=prism-browser
JWT_AUDIENCE=prism-browser-users

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="Prism Browser"

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=prism
CACHE_TTL=3600

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false

# Queue Configuration
QUEUE_CONNECTION=sync

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DATABASE=0

# Logging Configuration
LOG_CHANNEL=single
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=
PAPERTRAIL_URL=
PAPERTRAIL_PORT=

# Security Configuration
APP_KEY=base64:your-app-key-here
MAINTENANCE_SECRET=prism-maintenance

# Engine Configuration
ENGINE_DEFAULT=prism
ENGINE_CHROMIUM_ENABLED=true
ENGINE_FIREFOX_ENABLED=true
ENGINE_PRISM_ENABLED=true

# Plugin Configuration
PLUGINS_ENABLED=true
PLUGINS_AUTO_LOAD=true

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_TWO_FACTOR=false
FEATURE_API_RATE_LIMITING=true
FEATURE_CORS=true
FEATURE_MAINTENANCE_MODE=false
FEATURE_DEBUG_MODE=true
FEATURE_PROFILING=false
FEATURE_CACHING=true
FEATURE_COMPRESSION=true

# Health Check Configuration
HEALTH_ENABLED=true
HEALTH_DATABASE=true
HEALTH_CACHE=true
HEALTH_QUEUE=false
HEALTH_REDIS=false
HEALTH_MAIL=false

# Development Configuration
DEVELOPMENT_MODE=true
DEBUG_TOOLBAR=false
PROFILING_ENABLED=false
TESTING_MODE=false

# Production Configuration (Override in production)
# APP_ENV=production
# APP_DEBUG=false
# JWT_SECRET=your-production-secret-key
# APP_KEY=base64:your-production-app-key
# SESSION_SECURE_COOKIE=true
# MAIL_FROM_ADDRESS=noreply@yourdomain.com
# MAIL_FROM_NAME="Your App Name"